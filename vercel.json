{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/storefront/snippet/styles/*.css", "node_modules/ffmpeg-static/**"]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.js?__path=$1" }
  ]
}
